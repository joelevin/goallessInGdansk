package {		import flash.display.Graphics;	import flash.display.Sprite;	import flash.events.KeyboardEvent;		public class HealthBar extends Sprite	{				var bar:Sprite;		var outline:Sprite;		var line:Graphics;				var health:Number;		var maxHealth:Number;				var fullHealth:Boolean;		var emptyHealth:Boolean;				var barColor:uint;				public function HealthBar(lineColor:uint, barBackgroundColor:uint, barColor:uint,								  barWidth:uint, barHeight:uint, maxHealth:uint, xPos:uint, yPos:uint)		{			/*var lineColor:uint = 0x000000;			var barBackgroundColor:uint = 0x00FF00;			var barColor:uint = 0xFFFF00;			var barWidth:uint = 255;			var barHeight:uint = 10;*/						// constructor code			this.x = xPos;			this.y = yPos;						outline = new Sprite();			addChild(outline);						line = outline.graphics;			line.lineStyle(1, lineColor);			line.beginFill(barBackgroundColor);			line.lineTo(barWidth, 0);			line.lineTo(barWidth, barHeight);			line.lineTo(0, barHeight);			line.lineTo(0, 0);			line.endFill();						bar = new Sprite();			outline.addChild(bar);						line = bar.graphics;			line.lineStyle(0, lineColor);			line.beginFill(barColor);			line.lineTo(barWidth, 0);			line.lineTo(barWidth, barHeight);			line.lineTo(0, barHeight);			line.lineTo(0, 0);			line.endFill();						this.maxHealth = maxHealth;			health = this.maxHealth;			fullHealth = true;			this.barColor = barColor;					}				public function addHealth(amount:Number):void		{			if (health < maxHealth)			{				bar.scaleX += amount / 100;				health += amount; 			}		}				public function subtractHealth(amount:Number):void		{			if (health > 0)			{				bar.scaleX -= amount / 100;				health -= amount;			}		}				public function keyDownHandler(e:KeyboardEvent):void		{			if (e.keyCode == 83)			{				subtractHealth(1);			}			if (e.keyCode == 65)			{				addHealth(1);			}		}				public function changeColor(color:uint):void		{			barColor = color;		}	}}