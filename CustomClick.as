package {	import flash.display.*;	import flash.text.*;	import fl.motion.Color;	public class CustomClick extends Sprite {		private var wide:Number;		private var high:Number;		private var curve:Number;		private var thick:Number;		private var color:uint;		private var word:String;		private var txtShade:uint;		private var size:uint;		public function CustomClick(w:Number, h:Number, rad:Number, linW:Number, col:uint, txt:String, size:uint, txtCol:uint) {			wide = w;			high = h;			curve = rad;			thick = linW;			color = col;			word = txt;			txtShade = txtCol;			this.size = size;						var btn:SimpleButton = createBtn();			addChild(btn);			var labl:TextField = createLabel();			labl.mouseEnabled = false;			addChild(labl);		}				private function createBtn() { 			var btn:SimpleButton = new SimpleButton();			btn.upState = createRoundRect(color);			var ovCol:uint = Color.interpolateColor(color, 0xFFFFFF, .3)			btn.overState = createRoundRect(ovCol);			var dnCol:uint = Color.interpolateColor(color, 0x000000, .3)			btn.downState = createRoundRect(dnCol);			btn.hitTestState = btn.upState;			return btn;		}				private function createRoundRect(col:uint):Shape {			var rRect:Shape = new Shape();			rRect.graphics.beginFill(col, .5);			rRect.graphics.lineStyle(thick, color, 1);			rRect.graphics.drawRoundRect(0, 0, wide, high, curve);			rRect.graphics.endFill();			return rRect;		}				private function createLabel():TextField {			var txt:TextField = new TextField();			txt.width = wide;			txt.height = high;								var format:TextFormat = new TextFormat();			format.font = "Menlo";			format.color = txtShade;			format.size = size;			format.bold = true;			format.align = TextFormatAlign.CENTER;						txt.defaultTextFormat = format;			txt.y =  high/2 - size/2;			txt.text = word;			txt.selectable = false;						return txt;		}	}}